import "neon.ar" as neon
import "debug" as debug

let templates = {}

let templatesPath = path.join([program.cwd, "templates"])

let renderTemplate(path, values) = do
    if (path in templates && (not debug.inDebug)) return templates[path].render(values)
    let template = neon.template(path)
    if (not debug.inDebug) templates[path] = template
    return template.render(values)